statechart sc {
    events {
		e1;
		e2;
    }

	x: int;
	state A {
		xA: boolean;
	}
	state B {
		xB: int;
	}

    transition t1 {
		source: sc.A;
		destination: sc.A;
		trigger: e1;
		guard: x < 10;
		action: x := x+1;
	}

    transition t2 {
		source: sc.A;
		destination: sc.B;
		trigger: e2;
		guard: x < 0;
		action:{}
	}
}
